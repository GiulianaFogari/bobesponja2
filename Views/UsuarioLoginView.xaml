<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bobesponja2._0.Views.UsuarioLoginView"
             BackgroundImageSource="loginimage.jpeg"
>
    <ScrollView>
        <StackLayout Padding="15" Margin="0,215">
           
            <StackLayout Padding="10"/>
            <Label Text="E-mail" FontAttributes="Bold"/>
            <Entry Text="{Binding Email}" WidthRequest="350" />

            <StackLayout Padding="10"/>
            <Label Text="Senha" FontAttributes="Bold"/>
            <Entry Text="{Binding Senha}" WidthRequest="350" IsPassword="True"/>
         
            
            <StackLayout Padding="20"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="4">
                <Button Text="Registrar-se" Command="{Binding AbrirCadastro}" BackgroundColor="Red" TextColor="White" WidthRequest="178"/>
                <StackLayout Padding="15"/>
                <Button Text="Entrar" Command="{Binding LoginCommand}" BackgroundColor="red" WidthRequest="178" TextColor="White"/>

            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>