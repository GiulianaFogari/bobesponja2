<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bobesponja2._0.Views.UsuarioCadastroView">
    
    
    <ScrollView Padding="30">
        <VerticalStackLayout Spacing="15">
            <Label Text="Cadastro de Usuário" FontSize="28" HorizontalOptions="Center" />

            <Entry Placeholder="Nome" Text="{Binding Nome}" />
            <Entry Placeholder="CPF" Text="{Binding Cpf}" />
            <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
            <Entry Placeholder="Senha" Text="{Binding Senha}" IsPassword="True" />

            <Picker Title="Tipo de Usuário" ItemsSource="{Binding TiposUsuarios}" SelectedItem="{Binding Tipo}" />

            <Button Text="Salvar" Command="{Binding RegistrarCommand}" />
            <Button Text="Voltar ao Login" Command="{Binding VoltarLoginCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>